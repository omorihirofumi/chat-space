.side-bar
  .side-bar__user-name     
    .side-bar__user-name__user-box
      .side-bar__user-name__user-box__user
        = current_user.name
      .side-bar__user-name__user-box__menu
        =link_to new_group_path,class:"side-bar__user-name__user-box__menu__icon1" do  
          = icon('fas', 'pen-square', class:"side-bar__user-name__user-box__menu__icon1")
        =link_to edit_user_path(current_user), class:"side-bar__user-name__user-box__menu__icon2" do
          = icon('fas', 'cog', class:"side-bar__user-name__user-box__menu__icon2")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group) do
          .side-bar__group-list__group__name
            = group.name  
          .side-bar__group-list__group__message
            = group.show_last_message